<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/shape_round"
    android:padding="20dp">

    <!-- Student Name -->
    <TextView
        android:id="@+id/studentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Student ID -->
    <TextView
        android:id="@+id/studentId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID: 12345"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentName"/>

    <!-- Student Age -->
    <TextView
        android:id="@+id/studentAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Age: 20"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentId"/>

    <!-- Student Gender -->
    <TextView
        android:id="@+id/studentGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gender: Male"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentAge"/>

    <!-- Student Email -->
    <TextView
        android:id="@+id/studentEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email: student@example.com"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentGender"/>
    <Button
        android:id="@+id/view_marks"
        android:backgroundTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="All Students"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
