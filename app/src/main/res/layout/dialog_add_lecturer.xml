<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_round"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Lecturer ID Input -->
    <EditText
        android:textColorHint="#B4000000"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_round"
        android:id="@+id/editTextLecturerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lecturer ID"
        android:inputType="text"
        android:importantForAccessibility="yes" />

    <!-- Lecturer Name Input -->
    <EditText
        android:textColorHint="#B4000000"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_round"
        android:id="@+id/editTextLecturerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lecturer Name"
        android:inputType="text"
        android:importantForAccessibility="yes" />

    <!-- Courses Input -->
    <EditText
        android:textColorHint="#B4000000"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_round"
        android:id="@+id/editTextLecturerCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Courses (comma-separated)"
        android:inputType="text"
        android:importantForAccessibility="yes" />

    <!-- Submit Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/bottom_round"
        android:id="@+id/buttonSubmitLecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/primaryColor"
        android:text="Add Lecturer"
        android:textAllCaps="false"
        android:importantForAccessibility="yes" />
</LinearLayout>
