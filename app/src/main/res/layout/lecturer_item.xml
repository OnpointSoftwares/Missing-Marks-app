<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Row for Image and Name -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_lecturer"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecturer's Name"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- Department -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:textColor="#666666"/>

    <!-- Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: lecturer@university.com"
        android:textSize="14sp"
        android:paddingStart="10dp"
        android:textColor="#888888"/>

    <!-- Office Hours -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office Hours: 9 AM - 11 AM"
        android:textSize="14sp"
        android:paddingStart="10dp"
        android:textColor="#888888"/>

    <!-- Courses Taught -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses Taught"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:textStyle="bold"/>

    <!-- Placeholder for list of courses -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course 1, Course 2"
        android:textSize="14sp"
        android:paddingStart="10dp"/>
</LinearLayout>
